{
  "name": "less-player",
  "private": true,
  "version": "0.1.15-dev-3",
  "description": "Less Player, Less is More ! ",
  "author": {
    "name": "RIVE2012",
    "email": "Rive08@126.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeekLee2012/Less-Player-Desktop.git"
  },
  "license": "Apache License 2.0",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev concurrently vite \"electron .\"",
    "dist": "cross-env NODE_ENV=prod vite build && electron-builder",
    "build": "cross-env NODE_ENV=prod vite build",
    "pack": "cross-env NODE_ENV=prod electron-builder",
    "dist:mac": "cross-env NODE_ENV=prod vite build && electron-builder --mac --x64",
    "dist:mac-arm64": "cross-env NODE_ENV=prod vite build && electron-builder --mac --arm64",
    "dist:win": "cross-env NODE_ENV=prod vite build && electron-builder --win --x64",
    "dist:win-arm64": "cross-env NODE_ENV=prod vite build && electron-builder --win --arm64",
    "dist:win32": "cross-env NODE_ENV=prod vite build && electron-builder --win --ia32",
    "dist:linux": "cross-env NODE_ENV=prod vite build && electron-builder --linux --x64",
    "dist:linux-arm64": "cross-env NODE_ENV=prod vite build && electron-builder --linux --arm64",
    "dist:x64": "cross-env NODE_ENV=prod vite build && electron-builder --mac --x64 && cross-env PACK_HISTORY=keep electron-builder --win --x64 && cross-env PACK_HISTORY=keep electron-builder --linux --x64",
    "dist:mac-release": "cross-env NODE_ENV=prod vite build && electron-builder --mac --x64 && electron-builder --mac --arm64",
    "dist:win-release": "cross-env NODE_ENV=prod vite build && electron-builder --win --x64 && electron-builder --win --arm64 && electron-builder --win --ia32",
    "dist:linux-release": "cross-env NODE_ENV=prod vite build && electron-builder --linux --x64 && electron-builder --linux --arm64",
    "dist:release": "cross-env NODE_ENV=prod vite build && electron-builder --mac --x64 && cross-env PACK_HISTORY=keep electron-builder --win --x64 && cross-env PACK_HISTORY=keep electron-builder --linux --x64 && electron-builder --mac --arm64 && cross-env PACK_HISTORY=keep electron-builder --win --arm64 && cross-env PACK_HISTORY=keep electron-builder --linux --arm64 && cross-env PACK_HISTORY=keep electron-builder --win --ia32"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "crypto-js": "^4.1.1",
    "hls.js": "^1.1.5",
    "howler": "^2.2.3",
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.0.0",
    "mitt": "^3.0.0",
    "mousetrap": "^1.6.5",
    "music-metadata": "^7.12.3",
    "node-forge": "^1.3.1",
    "pinia": "^2.0.13",
    "pinia-plugin-persist": "^1.0.0",
    "qs": "^6.10.3",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14",
    "vue3-lazyload": "^0.3.6"
  },
  "devDependencies": {
    "@types/node-forge": "^1.0.1",
    "@vitejs/plugin-vue": "^2.3.0",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": ">=22.14.13",
    "vite": "^2.9.0",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "xyz.rive2012.less-player",
    "productName": "Less Player",
    "copyright": "Copyright Â© RIVE2012",
    "beforePack": "src/main/beforePack.js",
    "directories": {
      "output": "output"
    },
    "files": [
      "**/*",
      "!public/*",
      "!**/*.md",
      "!**/{npmrc,.npmrc,vite.config.js}",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}"
    ],
    "mac": {
      "artifactName": "${productName}.v${version}.${os}-${arch}.${ext}",
      "icon": "dist/icon.icns",
      "category": "public.app-category.music"
    },
    "win": {
      "artifactName": "${productName}.v${version}.${os}-${arch}.${ext}",
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        }
      ],
      "icon": "dist/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "artifactName": "${productName}.v${version}.${os}-${arch}.${ext}",
      "target": [
        {
          "target": "AppImage"
        }
      ],
      "icon": "dist/icon@256X256.icns",
      "category": "Audio"
    }
  }
}